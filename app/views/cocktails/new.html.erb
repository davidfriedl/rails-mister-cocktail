<div class="container">
  <h1>Create a cocktail</h1>

  <%= simple_form_for(@cocktail) do |f| %>
    <%= f.label :name %>
    <%= f.input :name, label:false, placeholder: "name of the cocktail ...", input_html: {style: 'width: 300px'} %>
    <br>
    <%= f.submit "submit cocktail", class: "btn btn-primary" %>
  <% end %>
</div>
