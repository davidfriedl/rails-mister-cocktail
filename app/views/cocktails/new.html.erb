

  <div class="create-box">
    <div>
      <%= image_tag 'undraw_beer_celebration_3wc8.png', class: 'create-image' %>
      </div>
    <div class="create-form">
      <h1 style="font-family: 'Oswald', sans-serif; margin-bottom: 40px;">add your Cocktail!</h1>
      <%= simple_form_for(@cocktail) do |f| %>
        <%= f.input :name, label:false, placeholder: "name of the cocktail ...", input_html: {style: 'width: 300px'} %>
        <br>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.submit "add cocktail", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>




