<div class="container">
  <h1>list of all cocktails</h1>

  <ul>
    <% @cocktails.each do |cocktail| %>
      <li>
        <%= link_to cocktail.name, cocktail_path(cocktail)  %>
      </li>
    <% end %>
  </ul>

  <p>Couldn't find your favorite cocktail?</p>
  <%= link_to "create it", new_cocktail_path  %>
</div>
